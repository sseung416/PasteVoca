<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="co.kr.dgsw.searchvoca.datasource.model.dto.Word" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">

        <View
            android:id="@+id/view_difficulty"
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_word"
            app:layout_constraintEnd_toEndOf="@+id/tv_word"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_word"
            app:layout_constraintVertical_bias="0.65" />

        <TextView
            android:id="@+id/tv_word"
            style="@style/BoldTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingHorizontal="4dp"
            android:text="@{data.word}"
            app:layout_constraintBottom_toBottomOf="@+id/btn_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_type"
            tools:text="happy" />

        <TextView
            android:id="@+id/tv_meaning"
            style="@style/RegularTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:text="@{data.meaning}"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_word"
            app:layout_constraintTop_toBottomOf="@+id/tv_word"
            tools:text="행복한" />

        <TextView
            android:id="@+id/textView5"
            style="@style/SmallTextView.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sound"
            app:layout_constraintVertical_bias="0.0"
            tools:text="English" />

        <ImageButton
            android:id="@+id/btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sound" />

        <ImageButton
            android:id="@+id/btn_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_sound"
            app:layout_constraintEnd_toStartOf="@+id/btn_sound"
            app:layout_constraintTop_toTopOf="@+id/btn_sound"
            app:srcCompat="@drawable/ic_type_easy" />

        <ImageView
            android:id="@+id/iv_iscorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>