<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PastVoca" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#252525</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:actionBarItemBackground">@null</item>
    </style>

    <!--  TextView  -->
    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegularTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallTextView.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallTextView.Gray" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NextWordTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">32dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">8dp</item>
        <item name="android:background">@drawable/selector_next_word_text_view</item>
    </style>

    <!--  EditText  -->
    <style name="AddEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/gray2</item>
        <item name="hintTextColor">@color/gray3</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
    </style>

    <style name="WordTestSettingEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--  CardView  -->
    <style name="SettingsCardView" parent="CardView">
        <item name="android:elevation">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="WordTestListCardView" parent="CardView">
        <item name="android:layout_width">@dimen/word_test_cardview_size</item>
        <item name="android:layout_height">@dimen/word_test_cardview_size</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardBackgroundColor">@color/gray1</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Theme.PastVoca.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PastVoca.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PastVoca.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  BottomSheet  -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
</resources>